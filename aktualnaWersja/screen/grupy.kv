<ZoneLayout>:
    id: zoneLayout
    name: 'zoneLayout'
    orientation: 'vertical'

    GridLayout:
        cols: 3
        size_hint: 1, .5
        pos_hint: {'x': 0, 'y': 0}

        Label:
            size_hint: 0.3,0.1
            text: 'Nazwa Grupy'
            color: (.235, .529, .572, 1)
            text_size: self.size
            font_size: '15sp'
            halign: 'center'
            valign: 'middle'

        Label:
            size_hint: 0.35,0.1
            text: 'Odrzucenie'
            color: (.235, .529, .572, 1)
            text_size: self.size
            font_size: '15sp'
            halign: 'center'
            valign: 'middle'

        Label:
            size_hint: 0.35,0.1
            text: 'Decyzja w trakcie połączenia'
            color: (.235, .529, .572, 1)
            text_size: self.size
            font_size: '15sp'
            halign: 'center'
            valign: 'middle'


<ZoneButton>:
    text: root._zoneNames[root._instance_count]
    color: (1, 1, 1, 1)
    text_size: self.size
    background_normal: ''
    background_color: (.235, .529, .572, 1)
    halign: 'center'
    valign: 'middle'


<ZoneCheckBoxes>:
    cols:2

    CheckBox:
        size_hint: 0.5,.01
        active: root.odrzuc
        group: "Zone " + root._zoneNames[root._instance_count]
        on_active: root.odrzucenie(self.group)
        color: (.235, .529, .572, 1)

    CheckBox:
        size_hint: 0.5,.01
        active: root.decyduj
        group: "Zone " + root._zoneNames[root._instance_count]
        on_active: root.decyzja(self.group)
        color: (.235, .529, .572, 1)


<ZoneElements>:
    cols: 2
    ZoneButton:

    ZoneCheckBoxes:
    Label:
        size_hint: 0.5,.01
        canvas.before:
            Color:
                rgba: (.941, .941, .937, 1)
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        size_hint: 2.5,.01
        canvas.before:
            Color:
                rgba: (.235, .529, .572, 1)
            Rectangle:
                pos: self.pos
                size: self.size

