<MusicPlayer>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, .8, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint: 1.0,.09
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            pos: 0,root.top-35
            Label:
                id: direct
                size_hint_x: .7
                hint_text: 'Lokacja muzyki'
            Button:
                id: searchBtn
                text: 'Wybierz folder'
                size_hint_x: .3
                background_color: 0.5,0.5,0.5,1
                on_release: root.onPressSongs()
        Label:
            size_hint: 1, 0.01
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1.0,.1
            Button:
                id: nowplay
                text: ''
                size_hint: 1, 0.98
                background_color: .05,.05,.05,1
            Label:
                size_hint: 1, 0.01
                id: status
                text: ''
                center: root.center
            Label:
                size_hint: 1, 0.01
                id: status
                text: ''
                center: root.center
        Label:
            size_hint: 1, 0.01
        BoxLayout:
            size_hint: 1.0,.89
            canvas:
                Color:
                    rgb: .3,.3,.3
                Rectangle:
                    pos: self.pos
                    size: self.size
            ScrollView:
                size_hint: 1, 1
                size_x: root.width
                GridLayout:
                    id: scroll
                    cols: 2
                    spacing: 10
                    size_hint_y: None
                    row_force_default: True
                    row_default_height: root.height/10
        Label:
            size_hint: 1, 0.01
        GridLayout:
            rows: 1
            size_hint_x: 1
            size_hint_y: .1
            Button:
                text: 'Poprzedni'
                background_color: 0,0,0,1
                on_press: root.backSong()
            Button:
                text: '||'
                background_color: 0,0,0,1
                on_press: root.stopSong()
            Button:
                text: 'NastÄ™pny'
                background_color: 0,0,0,1
                on_press: root.nextSong()

<ChooseFile>:
    canvas.before:
        Color:
            rgba: .4, .4, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            size_hint_y: .8
            id: filechooser
        BoxLayout:
            size_hint_y: .2
            Button:
                text: "Zamknij"
                background_color: 0,0,0,1
                on_release: root.cancel()
            Button:
                text: "Wybierz folder"
                background_color: 0,0,0,1
                on_release: root.select(filechooser.path)