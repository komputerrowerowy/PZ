#:import hex kivy.utils.get_color_from_hex

<MusicPlayer>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint: 1.0,.09
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            pos: 0,root.top-35

            Label:
                id: direct
                size_hint_x: .7
                canvas.before:
                    Color:
                        rgb: 0.235, 0.529, 0.572
                    Rectangle:
                        pos: self.pos
                        size: self.size
                color: 1, 1, 1, 1
                font_size: self.height / 2
                text: 'Twoja muzyka'

            Button:
                id: searchBtn
                #text: "szukaj"
                size_hint_x: .3
                background_normal: ''
                background_color: 0.235, 0.529, 0.572, 1
                on_release: root.getSongs()
                Image:
                    id: sdasdas
                    center_x: self.parent.center_x
                    center_y: (self.parent.center_y - (self.parent.height/2))
                    source: 'resources/search.png'
                    height: self.parent.height
        Label:
            size_hint: 1, 0.01
            canvas.before:
                Color:
                    rgb: .941, .960, .960
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1.0,.1
            Button:
                id: nowplay
                text: ''
                size_hint: 1, 0.98
                background_normal: ''
                background_color: 0.235, 0.529, 0.572,1
            Label:
                size_hint: 1, 0.01
                id: status
                text: ''
                center: root.center
            Label:
                size_hint: 1, 0.01
                id: status
                text: ''
                center: root.center
        Label:
            size_hint: 1, 0.01
        BoxLayout:
            id: asdasd
            orientation: 'horizontal'
            size_hint: 1, .89
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.01, 1
                Button:
                    size_hint_x: 0.5
                    #opacity: 0.5
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    text: ''
                    on_release: root.MusicPlayerPreviousCarousel()
            BoxLayout:
                size_hint: .98, 1
                canvas:
                    Color:
                        rgb: .941, .960, .960
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ScrollView:
                    size_hint: 1, 1
                    size_x: root.width
                    GridLayout:
                        id: scroll
                        padding: .2
                        cols: 2
                        size_hint_y: None
                        row_force_default: True
                        row_default_height: root.height/10
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.01, 1
                Button:
                    size_hint_x: 0.5
                    #opacity: 0.5
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    text: ''
                    on_release: root.MusicPlayerNextCarousel()
        Label:
            size_hint: 1, 0.01
        GridLayout:
            rows: 1
            size_hint_x: 1
            size_hint_y: .1
            Button:
                background_normal: ''
                background_color: 0.235, 0.529, 0.572, 1
                on_press: root.backSong()
                Image:
                    id: backSongg
                    center_x: self.parent.center_x
                    source: 'resources/back.png'
                    height: self.parent.height
            Button:
                background_normal: ''
                background_color: 0.235, 0.529, 0.572, 1
                on_press: root.stopSong()
                Image:
                    id: playSongg
                    center_x: self.parent.center_x
                    source: 'resources/play.png'
                    height: self.parent.height
            Button:
                background_normal: ''
                background_color: 0.235, 0.529, 0.572, 1
                on_press: root.nextSong()
                Image:
                    id: nextSongg
                    center_x: self.parent.center_x
                    source: 'resources/next.png'
                    height: self.parent.height

