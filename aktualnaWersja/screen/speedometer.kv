#:kivy 1.8.0

<Speedometer>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 10
            text: "Prędkość:"
            color: 1, 1, 1, 1
        Label:
            id:label_speed
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1

        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 10
            text: "Największa prędkość:"
            color: 1, 1, 1, 1

        Label:
            id:label_max_speed
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1

