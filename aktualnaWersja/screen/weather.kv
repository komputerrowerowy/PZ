<Weather>:
    BoxLayout:
        id: asdasd
        orientation: 'horizontal'
        size_hint: 1, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.01, 1
            Button:
                size_hint_x: 0.5
                #opacity: 0.5
                background_normal: ''
                background_color: 0.235, 0.529, 0.572, 1
                text: ''
                on_release: root.WeatherPreviousCarousel()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.98, 1
            spacing: 5
            canvas:
                Color:
                    rgb: .941, .960, .960
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                canvas.before:
                    Color:
                        rgb: 0.235, 0.529, 0.572
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: .1
                font_size: self.height / 3
                text: "Pogoda:"
                color: 1, 1, 1, 1
            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                size_hint_y: .175
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: .02
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: .49

                    BoxLayout:
                        size_hint_x: .3
                        orientation: 'vertical'
                        Image:
                            size_hint_y: .8
                            center_x: self.parent.center_x
                            source: 'resources/temp.png'
                            height: self.parent.height
                        Label:
                            size_hint_y: .2
                            font_size: self.height / 2
                            color: 0.235, 0.529, 0.572, 1
                            text: 'Temperatura'
                    Label:
                        id:label_temperatura
                        size_hint_x: .7
                        font_size: self.height / 6
                        color: 0.235, 0.529, 0.572, 1
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: .49
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: .3
                        Image:
                            id:obrazek_pogody
                            size_hint_y: .8
                            center_x: self.parent.center_x
