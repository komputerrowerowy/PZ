                            height: self.parent.height
                        Label:
                            size_hint_y: .2
                            font_size: self.height / 2
                            color: 0.235, 0.529, 0.572, 1
                            text: 'Opady'
                    Label:
                        id:label_opady
                        size_hint_x: .7
                        font_size: self.height / 6
                        color: 0.235, 0.529, 0.572, 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .175
                spacing: 5
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: .02
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: .49
                    BoxLayout:
                        size_hint_x: .3
                        orientation: 'vertical'
                        Image:
                            size_hint_y: .8
