<Weather>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        canvas:
            Color:
                rgb: .941, .960, .960
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: .1
            text: "Pogoda:"
            color: 1, 1, 1, 1
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint_y: .175
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        size_hint_y: .8
                        center_x: self.parent.center_x
                        source: 'resources/temp.png'
                        height: self.parent.height
                    Label:
                        size_hint_y: .2
                        font_size: self.height / 2
                        color: 0.235, 0.529, 0.572, 1
                        text: 'Temperatura'
                Label:
                    id:label_temperatura
                    font_size: self.height / 6
                    color: 0.235, 0.529, 0.572, 1
            BoxLayout:
                orientation: 'horizontal'
