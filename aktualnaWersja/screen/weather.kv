<Weather>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'Wcisnij'
            size_hint_y: 20
            on_release: root.ustal_pogode()
        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 10
            text: "Temperatura:"
            color: 1, 1, 1, 1
        Label:
            id:temperature_now
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1

        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 10
            text: "Temperatura za 3h:"
            color: 1, 1, 1, 1
        Label:
            id:temperature_forecast
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
