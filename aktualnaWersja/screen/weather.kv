<Weather>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text:'Prognozuj'
            size_hint_y: 20
            on_release:root.ustal_pogode()
        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 10
            text: "Pogoda:"
            color: 1, 1, 1, 1
        Label:
            id:label_temperatura
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
        Label:
            id:label_opady
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
        Label:
            id:label_wilgotnosc
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
        Label:
            id:label_wiatr
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1

        Label:
            canvas.before:
                Color:
                    rgb: 0.235, 0.529, 0.572
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 10
            text: "Pogoda za 3h:"
            color: 1, 1, 1, 1

        Label:
            id:label_forecast_temperatura
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
        Label:
            id:label_forecast_opady
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
        Label:
            id:label_forecast_wilgotnosc
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1
        Label:
            id:label_forecast_wiatr
            size_hint_y: 40
            font_size: self.height / 3
            color: 0.235, 0.529, 0.572, 1